<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="to.msn.wings.calendarrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/blue1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/blue1"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalendarRecyclerView">
        <activity
            android:name=".ScheduleFormActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="false" />
        <activity
            android:name=".TimeScheduleActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="false" />
        <activity
            android:name=".MonthCalendarActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>